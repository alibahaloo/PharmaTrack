<Window
    x:Class="PharmaTrack.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:PharmaTrack.Shared"
    mc:Ignorable="d"
    Title="PharmaTrack">

    <Grid>
        <!-- Define two columns with equal width -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Calendar Grid -->
        <local:CalendarControl
            x:Name="MyCalendar"
            Grid.Column="0"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" />


        <!-- StackPanel with Button in the right column -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="myButton" Click="myButton_Click">Click Me Here</Button>
        </StackPanel>
    </Grid>
</Window>
