<Application x:Class="PharmaTrack.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PharmaTrack.WPF"
             xmlns:converters="clr-namespace:PharmaTrack.WPF.Converters">
    <Application.Resources>
        <FontFamily x:Key="FontAwesome">/Fonts/Font-Awesome-6-Free-Regular-400.otf#Font Awesome 6 Free Regular</FontFamily>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:PageNavigationConverter x:Key="PageNavigationConverter" />
        <converters:MonthColorConverter x:Key="MonthColorConverter" />
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        <converters:TodayDateToColorConverter x:Key="TodayDateToColorConverter" />
        <Style x:Key="GlobalDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
    </Application.Resources>
</Application>
