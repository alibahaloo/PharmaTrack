<UserControl x:Class="PharmaTrack.WPF.Controls.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bi="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <ProgressBar x:Name="StatusBar" Width="200" Height="10" IsIndeterminate="{Binding IsLoading}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalContentAlignment="Left">
                <TextBlock Text="{Binding StatusText}"
                   Foreground="{Binding StatusForeground}"
                   FontWeight="Bold"
                   Margin="5" />
            </StatusBarItem>
        </StatusBar>
        <!-- Product Details Form -->
        <StackPanel Margin="10">
            <!-- Title -->
            <TextBlock Text="Product Details" FontSize="32" Margin="5"></TextBlock>
            <!-- Product Information -->
            <StackPanel Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="Quantity:" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Product.Quantity}"  Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="UPC:" FontWeight="Bold" Width="100" VerticalAlignment="Center" />
                    <TextBox Text="{Binding Product.UPC, Mode=TwoWay}" Width="300" Padding="5" />
                    <Button FontWeight="Regular"
                            Margin="5,0,0,0"
                            x:Name="ScanButton"
                            Command="{Binding ScanBarcodeCommand}"
                            HorizontalAlignment="left"
                            VerticalAlignment="Center"
                            Background="Green"
                            Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <bi:BootstrapIcon Icon="UpcScan"
                                                  Margin="4"
                                                  Foreground="White" />
                                <TextBlock Text="Scan Barcode"
                                           VerticalAlignment="Center"
                                           Margin="5"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="NPN:" FontWeight="Bold" Width="100" VerticalAlignment="Center" />
                    <TextBox Text="{Binding Product.NPN, Mode=TwoWay}" Width="300" Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="DIN:" FontWeight="Bold" Width="100" VerticalAlignment="Center" />
                    <TextBox Text="{Binding Product.DIN, Mode=TwoWay}" Width="300" Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="Name:" FontWeight="Bold" Width="100" VerticalAlignment="Center" />
                    <TextBox Text="{Binding Product.Name, Mode=TwoWay}" Width="300" Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <TextBlock Text="Brand:" FontWeight="Bold" Width="100" VerticalAlignment="Center" />
                    <TextBox Text="{Binding Product.Brand, Mode=TwoWay}" Width="300" Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    
                </StackPanel>
            </StackPanel>

            <!-- Description -->
            <StackPanel Margin="5">
                <TextBlock Text="Description:" FontWeight="Bold" Margin="5" />
                <TextBox Text="{Binding Product.Name, Mode=TwoWay}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="80"
                 Padding="5" />
            </StackPanel>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button FontWeight="Bold"
                        FontSize="16"
                        Command="{Binding SaveCommand}"
                        Background="Blue"
                        Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <bi:BootstrapIcon Icon="Floppy" 
                                              Margin="5"
                                              Foreground="White" />
                            <TextBlock Text="Save" 
                                       Margin="5,0,5,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button FontWeight="Bold"
                        Margin="5,0,5,0"
                        FontSize="16"
                        Command="{Binding GoBackCommand}"
                        Background="Gray"
                        Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <bi:BootstrapIcon Icon="X"
                                              Margin="5"
                                              Foreground="White" />
                            <TextBlock Text="Cancel"
                                       Margin="5,0,5,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>

    </DockPanel>
</UserControl>
