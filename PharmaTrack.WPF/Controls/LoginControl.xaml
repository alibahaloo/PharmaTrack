<UserControl x:Class="PharmaTrack.WPF.Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <Button Content="Login" Click="LoginButton_Click" Margin="0,0,0,10"/>
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>
    </StackPanel>
</UserControl>
