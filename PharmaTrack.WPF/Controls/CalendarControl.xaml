<UserControl x:Class="PharmaTrack.WPF.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bi="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls">
    <Grid>
        <!-- Define the calendar layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="0" Margin="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                    <!-- Month Header -->
                    <TextBlock Text="{Binding CurrentMonth, StringFormat={}{0:MMMM yyyy}}" 
                               Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                               FontSize="20" 
                               FontWeight="Bold" />

                    <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:dd MMMM yyyy}}"
                               Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}"
                               VerticalAlignment="Top"
                               FontSize="20" 
                               FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                            Command="{Binding PreviousMonthCommand}"
                            FontWeight="Bold"
                            Margin="5">
                        <Button.Content>
                            <bi:BootstrapIcon Icon="ArrowLeft"
                          Width="20"
                          Margin="5"
                          Height="20" />
                        </Button.Content>
                    </Button>

                    <Button Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                            Command="{Binding TodayCommand}"
                            FontWeight="Bold"
                            Margin="5" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <bi:BootstrapIcon Icon="CalendarMinus"
                                                  Margin="5"
                                                  Width="20"
                                                  Height="20" />
                                <TextBlock Text="Today" 
                                           Margin="5"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                            Command="{Binding NextMonthCommand}"
                            FontWeight="Bold"
                            Margin="5">
                        <Button.Content>
                            <bi:BootstrapIcon Icon="ArrowRight"
                                              Margin="5"
                                              Width="20"
                                              Height="20" />
                        </Button.Content>
                    </Button>

                    <Button x:Name="BackToCalendar" 
                            Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}"
                            Command="{Binding LoadCalendarCommand}" 
                            FontWeight="Bold"
                            Margin="5">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <bi:BootstrapIcon Icon="CalendarWeek"
                                                  Margin="5"
                                                  Width="20"
                                                  Height="20" />
                                <TextBlock Text="Back to Calendar" 
                                           Margin="5"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <RadioButton GroupName="DataMode"
                                 Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                                 IsChecked="{Binding DataMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=MySchedule}"
                                 Command="{Binding ChangeDataMode}"
                                 Margin="5">
                        <RadioButton.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <bi:BootstrapIcon Icon="CalendarRange"
                                                  Height="16" />
                                <TextBlock Text=" My Schedule" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton.Content>
                    </RadioButton>
                    <RadioButton GroupName="DataMode"
                                 Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                                 IsChecked="{Binding DataMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TeamSchedule}"
                                 Command="{Binding ChangeDataMode}"
                                 Margin="5">
                        <RadioButton.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <bi:BootstrapIcon Icon="CalendarWeek"
                                                  Width="16"
                                                  Height="16" />
                                <TextBlock Text=" Team Schedule" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton.Content>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                VerticalAlignment="Center"
                Visibility="{Binding DisplayMode, 
                             Converter={StaticResource EnumToVisibilityConverter}, 
                             ConverterParameter=Loading}">
            <local:LoadingControl />
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}">
        </StackPanel>

        <!-- Calendar Grid -->
        <ItemsControl Grid.Row="1" 
                      ItemsSource="{Binding CalendarDays}"
                      Visibility="{Binding DisplayMode, 
                               Converter={StaticResource EnumToVisibilityConverter}, 
                               ConverterParameter=Calendar}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" 
                            Cursor="Hand"
                            Background="{Binding IsCurrentMonth, Converter={StaticResource MonthColorConverter}}">
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding LoadDetailsCommand}" 
                                          CommandParameter="{Binding Date}" />
                        </Border.InputBindings>
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <TextBlock Text="{Binding Date.Day}" 
                                       Foreground="{Binding Date, Converter={StaticResource TodayDateToColorConverter}}"
                                       FontSize="16" 
                                       FontWeight="Bold" />
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource ParentHeightConverter}}">
                                <ItemsControl ItemsSource="{Binding HighlightedEvents}" Margin="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   Padding="2"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap"
                                                   Background="LightGreen"
                                                   FontSize="10" 
                                                   Foreground="Black" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
