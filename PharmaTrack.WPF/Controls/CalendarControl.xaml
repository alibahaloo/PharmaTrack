<UserControl x:Class="PharmaTrack.WPF.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls"
             xmlns:bi="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Define two columns with equal width -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Calendar Grid -->
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Navigation Buttons -->
                <RowDefinition Height="Auto" />
                <!-- Header -->
                <RowDefinition Height="*" />
                <!-- Calendar -->
            </Grid.RowDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,5">
                <Button x:Name="PrevMonthButton" 
                        Margin="5"
                        Background="Green"
                        Foreground="White"
                        Click="PrevMonthButton_Click" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <bi:BootstrapIcon Icon="CaretLeftFill"
                                              Foreground="White" />
                            <TextBlock Text="Previous"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Padding="5"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="TodayButton" 
                        Margin="5"
                        Click="TodayButton_Click" 
                        Background="Green"
                        Foreground="White"
                        Content="Today"
                        FontWeight="bold"
                        FontSize="16"
                        Padding="5">
                </Button>
                <Button x:Name="NextMonthButton" 
                        Margin="5"
                        Click="NextMonthButton_Click" 
                        Background="Green"
                        Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Next"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Padding="5"/>
                            <bi:BootstrapIcon Icon="CaretRightFill"
                                              Foreground="White" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>


            <!-- Month and Year Header -->
            <TextBlock 
                x:Name="MonthYearHeader"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Text="" />

            <!-- Calendar Days -->
            <Grid 
                x:Name="CalendarGrid"
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <!-- Rows and Columns will be created programmatically -->
            </Grid>
        </Grid>

        <!-- Selected Date Details -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="EventDetails" />
        </StackPanel>
    </Grid>
</UserControl>
