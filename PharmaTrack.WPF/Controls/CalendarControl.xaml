<UserControl x:Class="PharmaTrack.WPF.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls">
    <Grid>
        <!-- Define the calendar layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Navigation -->
            <RowDefinition Height="*" />
            <!-- Calendar Grid -->
        </Grid.RowDefinitions>

        <!-- Month Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding CurrentMonth, StringFormat={}{0:MMMM yyyy}}" 
                   HorizontalAlignment="Center" 
                   FontSize="20" 
                   FontWeight="Bold" />

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Previous" Click="PrevMonthButton_Click" Margin="5" />
            <Button Content="Today" Click="TodayButton_Click" Margin="5" />
            <Button Content="Next" Click="NextMonthButton_Click" Margin="5" />
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    VerticalAlignment="Center"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=false}">
            <ProgressBar  IsIndeterminate="True" Width="100" Height="10"/>
        </StackPanel>

        <!-- Calendar Grid -->
        <ItemsControl Grid.Row="2" 
                      ItemsSource="{Binding CalendarDays}"
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=true}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Background="{Binding IsCurrentMonth, Converter={StaticResource MonthColorConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Date.Day}" FontSize="16" FontWeight="Bold" />
                            <TextBlock Text="{Binding HighlightedEvent}" FontSize="12" Foreground="Green" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
