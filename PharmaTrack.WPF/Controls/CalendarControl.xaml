<UserControl x:Class="PharmaTrack.WPF.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bi="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation Pange -->
        <StackPanel Grid.Row="0">

            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Month Header -->
                    <TextBlock Text="{Binding CurrentMonth, StringFormat={}{0:MMMM yyyy}}" 
                               Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
                               FontSize="20" 
                               FontWeight="Bold" />

                    <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:dd MMMM yyyy}}"
                               Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}"
                               VerticalAlignment="Top"
                               FontSize="20" 
                               FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}">
                        
                        <Button Command="{Binding PreviousMonthCommand}"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Weekly}"
                                FontWeight="Bold"
                                Margin="5">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="ArrowLeft"
                                                  Width="20"
                                                  Margin="5"
                                                  Height="20" />
                            </Button.Content>
                        </Button>
                        <Button Command="{Binding PrevWeekCommand}"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Monthly}"
                                FontWeight="Bold"
                                Margin="5">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="ArrowLeft"
                                                  Width="20"
                                                  Margin="5"
                                                  Height="20" />
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <StackPanel>
                        <Button Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}"
        Command="{Binding TodayCommand}"
        FontWeight="Bold"
        Margin="5" >
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <bi:BootstrapIcon Icon="CalendarMinus"
                              Margin="5"
                              Width="20"
                              Height="20" />
                                    <TextBlock Text="Today" 
                       Margin="5"
                       VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button x:Name="BackToCalendar" 
                                Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}"
                                Command="{Binding LoadCalendarCommand}" 
                                FontWeight="Bold"
                                Margin="5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <bi:BootstrapIcon Icon="CalendarWeek"
                                                      Margin="5"
                                                      Width="20"
                                                      Height="20" />
                                    <TextBlock Text="Back to Calendar" 
                                               Margin="5"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <StackPanel Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}">
                        <Button Command="{Binding NextWeekCommand}"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Monthly}"
                                FontWeight="Bold"
                                Margin="5">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="ArrowRight"
                                                  Margin="5"
                                                  Width="20"
                                                  Height="20" />
                            </Button.Content>
                        </Button>
                        <Button Command="{Binding NextMonthCommand}"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Weekly}"
                                FontWeight="Bold"
                                Margin="5">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="ArrowRight"
                                                  Margin="5"
                                                  Width="20"
                                                  Height="20" />
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    
                </StackPanel>
                <!-- Data Mode Selector -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right"
                            Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}">
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding ViewMonthlyCommand}"
                                ToolTip="Monthly View"
                                Margin="5"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Monthly}">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="CalendarMonth" />
                            </Button.Content>
                        </Button>

                        <Button Command="{Binding ViewWeeklyCommand}"
                                ToolTip="Weekly View"
                                Margin="5"
                                Visibility="{Binding CalendarMode, Converter={StaticResource CalendarModeToVisibilityConverter}, ConverterParameter=Weekly}">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="CalendarWeek" />
                            </Button.Content>
                        </Button>


                        <Button Visibility="{Binding DataMode, Converter={StaticResource DataModeToVisibilityConverter}, ConverterParameter=MySchedule}"
                                Margin="5"
                                ToolTip="My Schedule"
                                Command="{Binding ViewMyScheduleCommand}" >
                            <Button.Content>
                                <bi:BootstrapIcon Icon="Person" />
                            </Button.Content>
                        </Button>

                        <Button Visibility="{Binding DataMode, Converter={StaticResource DataModeToVisibilityConverter}, ConverterParameter=TeamSchedule}"
                                Margin="5"
                                ToolTip="Team Schedule"
                                Command="{Binding ViewTeamScheduleCommand}">
                            <Button.Content>
                                <bi:BootstrapIcon Icon="People" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,5,5"
                                Visibility="{Binding DataMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=TeamSchedule}">
                        <TextBlock Text="User:"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                        <ComboBox IsEditable="True"
                                  ItemsSource="{Binding FilteredUsers}" 
                                  Text="{Binding SelectedUser, UpdateSourceTrigger=PropertyChanged}" 
                                  StaysOpenOnEdit="True" 
                                  IsTextSearchEnabled="False"
                                  IsDropDownOpen="{Binding IsDropDownOpen}" 
                                  Width="200"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Loading Section -->
        <StackPanel Grid.Row="1" 
                VerticalAlignment="Center"
                Visibility="{Binding DisplayMode, 
                             Converter={StaticResource EnumToVisibilityConverter}, 
                             ConverterParameter=Loading}">
            <local:LoadingControl />
        </StackPanel>

        <!-- Details Grid -->
        <StackPanel Grid.Row="1" 
            Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Details}">
            <ItemsControl ItemsSource="{Binding DailySchedules}" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <!-- Row for Start and End -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Start, StringFormat='{}{0:HH:mm}'}" 
                                   FontWeight="Bold"
                                   Foreground="Gray" />
                                <TextBlock Text=" to " FontWeight="Bold" Foreground="Gray" />
                                <TextBlock Text="{Binding End, StringFormat='{}{0:HH:mm}'}" 
                                   FontWeight="Bold"
                                   Foreground="Gray" />
                            </StackPanel>

                            <!-- Row for Description -->
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="5,2,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>


        <!-- Calendar Grid -->
        <ItemsControl Grid.Row="1" 
                      ItemsSource="{Binding CalendarDays}"
                      Visibility="{Binding DisplayMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Calendar}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" 
                         Rows="{Binding CalendarMode, Converter={StaticResource CalendarModeToRowsConverter}}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" 
                            Cursor="Hand"
                            Background="{Binding IsCurrentMonth, Converter={StaticResource MonthColorConverter}}">
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding LoadDetailsCommand}" 
                                          CommandParameter="{Binding Date}" />
                        </Border.InputBindings>
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                            <TextBlock Text="{Binding Date.Day}" 
                                       Foreground="{Binding Date, Converter={StaticResource TodayDateToColorConverter}}"
                                       FontSize="16" 
                                       FontWeight="Bold" />
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource ParentHeightConverter}}">
                                <ItemsControl ItemsSource="{Binding HighlightedEvents}" Margin="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Padding="2"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="NoWrap"
                                                       Background="LightGreen"
                                                       FontSize="10" 
                                                       Foreground="Black">
                            <!-- MouseBinding for Triggering Parent Command -->
                                                <TextBlock.InputBindings>
                                                    <MouseBinding Gesture="LeftClick"
                                                                  Command="{Binding DataContext.LoadDetailsCommand, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                  CommandParameter="{Binding DataContext.Date, RelativeSource={RelativeSource AncestorType=Border}}" />
                                                </TextBlock.InputBindings>
                                            </TextBlock>
                                        </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
