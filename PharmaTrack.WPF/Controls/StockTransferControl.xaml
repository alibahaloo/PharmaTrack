<UserControl x:Class="PharmaTrack.WPF.Controls.StockTransferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="20">
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{Binding StatusForeground}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5" />
            </StatusBarItem>
        </StatusBar>
        <!-- Main Content -->
        <StackPanel>
            <!-- Barcode Scanning -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Scan Barcode"
                        x:Name="ScanButton"
                        Command="{Binding ScanBarcodeCommand}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Green"
                        Foreground="Black"
                        Padding="5"
                        Click="ScanButton_Click" />
                <TextBlock Text="UPC" VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" Margin="5"/>
                <TextBox x:Name="UPCInputTextBox"
                         Padding="5"
                         Text="{Binding UPCInput, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"
                         Margin="5"
                         ToolTip="Enter UPC here"
                         GotFocus="UPCInputTextBox_GotFocus"
                         LostFocus="UPCInputTextBox_LostFocus" />

                <Button Content="Lookup Barcode"
                        x:Name="LoockupBarcode"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Cyan"
                        Foreground="Black"
                        Padding="5" />
            </StackPanel>
            
            <!-- Additional Input Fields -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="Brand" VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" Margin="5"/>
                    <TextBox Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"
                             Width="200"
                             Margin="5" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="NPN" VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" Margin="5"/>
                    <TextBox Text="{Binding NPN, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"
                             Width="150"
                             Margin="5" />
                </StackPanel>


                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="DIN" VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" Margin="5"/>
                    <TextBox Text="{Binding DIN, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"
                             Width="150"
                             Margin="5" />
                </StackPanel>
            </StackPanel>

            <!-- Product Description -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Product Description" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>
                <TextBox Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         SelectionBrush="Green"
                         MinWidth="100"
                         MinHeight="50"
                         Padding="5"
                         Margin="5"
                         ToolTip="Enter product title or description" />
            </StackPanel>

            

            <StackPanel Orientation="Horizontal">
                <!-- Radio Buttons and Quantity -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Transfer" Margin="5" />
                    <StackPanel Orientation="Horizontal" >
                        <RadioButton Content="Stock In"
                                     GroupName="Transfer"
                                     IsChecked="{Binding IsStockIn, Mode=TwoWay}"
                                     Margin="5" />
                        <RadioButton Content="Stock Out"
                                     GroupName="Transfer"
                                     IsChecked="{Binding IsStockOut, Mode=TwoWay}"
                                     Margin="5" />
                    </StackPanel>
                </StackPanel>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Quantity" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>

                    <TextBox Width="200"
                             Padding="5"
                             Margin="5"
                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             ToolTip="Enter quantity" />
                    <TextBlock Foreground="Red"
                                Text="{Binding ElementName=QuantityTextBox, Path=(Validation.Errors)[0].ErrorContent, FallbackValue='', NotifyOnValidationError=True}" />
                </StackPanel>
            </StackPanel>

            <!-- Submit Button -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Submit Stock Transfer"
                        Command="{Binding SubmitCommand}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="DodgerBlue"
                        Foreground="White"
                        Margin="5"
                        Padding="5"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
