<UserControl x:Class="PharmaTrack.WPF.Controls.ScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmaTrack.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Schedule Task" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />

            <TextBlock Text="Select Date:" />
            <DatePicker SelectedDate="{Binding SelectedDate}" />

            <TextBlock Text="Start Time:" />
            <TextBox Text="{Binding StartTime, StringFormat=hh\\:mm}" />

            <TextBlock Text="End Time:" />
            <TextBox Text="{Binding EndTime, StringFormat=hh\\:mm}" />

            <TextBlock Text="Description:" />
            <TextBox Text="{Binding Description}" AcceptsReturn="True" Height="100" />

            <Button Content="Submit" Command="{Binding SubmitCommand}" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
